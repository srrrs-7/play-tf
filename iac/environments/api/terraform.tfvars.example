aws_region   = "ap-northeast-1"
environment  = "dev"
project_name = "myapp"

# DynamoDB Configuration
table_name              = "items"
dynamodb_billing_mode   = "PAY_PER_REQUEST"
dynamodb_hash_key       = "id"
dynamodb_range_key      = null

dynamodb_attributes = [
  {
    name = "id"
    type = "S"
  }
]

dynamodb_ttl_enabled             = false
dynamodb_ttl_attribute_name      = "ttl"
dynamodb_point_in_time_recovery  = false
dynamodb_stream_enabled          = false
dynamodb_stream_view_type        = null

# Example with GSI (uncomment if needed):
# dynamodb_global_secondary_indexes = [
#   {
#     name               = "email-index"
#     hash_key           = "email"
#     range_key          = null
#     write_capacity     = null
#     read_capacity      = null
#     projection_type    = "ALL"
#     non_key_attributes = null
#   }
# ]

# Lambda Configuration
lambda_runtime       = "nodejs20.x"
lambda_handler       = "index.handler"
lambda_source_path   = "./api-handler/dist"
lambda_timeout       = 30
lambda_memory_size   = 256
lambda_architectures = ["x86_64"]

lambda_environment_variables = {
  LOG_LEVEL = "INFO"
}

lambda_log_retention_days = 7

# API Gateway Configuration
api_authorization_type   = "NONE"
api_xray_tracing_enabled = false
api_enable_cors          = true
api_cors_allow_origin    = "'*'"
api_log_retention_days   = 7

api_stage_variables = {}
