{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "./shared": ["../shared"],
      "./shared/*": ["../shared/*"]
    }
  },
  "include": ["*.ts", "shared/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
