# =============================================================================
# EventBridge → Step Functions → ECS Tasks Architecture
# =============================================================================
# このファイルをコピーして terraform.tfvars を作成してください:
#   cp terraform.tfvars.example terraform.tfvars

# =============================================================================
# General Settings
# =============================================================================

aws_region   = "ap-northeast-1"
project_name = "eb-sfn-ecs"
environment  = "dev"
stack_name   = "ecs-workflow"

# =============================================================================
# VPC Settings
# =============================================================================

# デフォルトVPCを使用するか（推奨: 簡単なテスト用）
# falseの場合は新しいVPCを作成
use_default_vpc = true

# 新しいVPCを作成する場合の設定
vpc_cidr            = "10.0.0.0/16"
public_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24"]

# =============================================================================
# EventBridge Settings
# =============================================================================

# イベントソース
event_source = "task.service"

# イベントタイプ
event_detail_type = "TaskRequested"

# =============================================================================
# ECS Settings
# =============================================================================

# コンテナイメージ
# 独自イメージを使用する場合はECRリポジトリURIを指定
container_image = "amazon/amazon-ecs-sample"

# Fargate CPU単位（256, 512, 1024, 2048, 4096）
fargate_cpu = 256

# Fargateメモリ（MB）
fargate_memory = 512

# =============================================================================
# Step Functions Settings
# =============================================================================

# Step Functionsタイプ
# - STANDARD: 長時間実行、同期ECSタスク対応
# - EXPRESS: 短時間実行（最大5分）、非同期のみ
sfn_type = "STANDARD"

# =============================================================================
# Logging Settings
# =============================================================================

log_retention_days = 30

# =============================================================================
# Tags
# =============================================================================

tags = {
  Owner = "your-name"
}
