# =============================================================================
# EC2 + NAT Instance + VPC Endpoint + S3 Architecture
# =============================================================================
# このファイルをコピーして terraform.tfvars を作成してください:
#   cp terraform.tfvars.example terraform.tfvars

# =============================================================================
# General Settings
# =============================================================================

# AWSリージョン
aws_region = "ap-northeast-1"

# プロジェクト名（リソース名のプレフィックスに使用）
project_name = "ec2-vpc-endpoint"

# 環境名
environment = "dev"

# スタック名（必須）
stack_name = "my-stack"

# =============================================================================
# VPC Settings
# =============================================================================

# VPC CIDR
vpc_cidr = "10.0.0.0/16"

# パブリックサブネット CIDR（NAT Instance用）
public_subnet_cidr = "10.0.0.0/24"

# プライベートサブネット CIDR（EC2用）
private_subnet_cidr = "10.0.1.0/24"

# =============================================================================
# NAT Instance Settings
# =============================================================================

# NAT Instanceを作成するか
create_nat_instance = true

# NAT Instanceタイプ（t4g.nano推奨: ~$3/月）
nat_instance_type = "t4g.nano"

# ARMインスタンス（t4g/t3g系）かどうか
nat_instance_type_is_arm = true

# =============================================================================
# EC2 Instance Settings
# =============================================================================

# EC2インスタンスを作成するか
create_ec2_instance = true

# EC2インスタンスタイプ（t3.micro: 無料枠対象）
ec2_instance_type = "t3.micro"

# ルートボリュームサイズ（GB）
ec2_root_volume_size = 8

# =============================================================================
# VPC Endpoint Settings
# =============================================================================

# S3 Gateway Endpointを作成するか（無料）
create_s3_endpoint = true

# SSM Interface Endpointsを作成するか（有料: ~$22/月）
# Session Manager接続に必要
create_ssm_endpoints = true

# =============================================================================
# S3 Settings
# =============================================================================

# S3バケットを作成するか
create_s3_bucket = true

# S3バケット名（nullの場合は自動生成）
# s3_bucket_name = "my-custom-bucket-name"
s3_bucket_name = null

# バージョニングを有効にするか
s3_enable_versioning = true

# =============================================================================
# IAM Settings
# =============================================================================

# S3へのフルアクセスを許可するか（falseの場合は読み取り専用）
s3_full_access = false

# =============================================================================
# Tags
# =============================================================================

tags = {
  Owner = "your-name"
}
