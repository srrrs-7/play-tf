# =============================================================================
# EventBridge Scheduler → Lambda → S3 Architecture
# =============================================================================
# このファイルをコピーして terraform.tfvars を作成してください:
#   cp terraform.tfvars.example terraform.tfvars

# =============================================================================
# General Settings
# =============================================================================

aws_region   = "ap-northeast-1"
project_name = "eb-scheduler"
environment  = "dev"
stack_name   = "my-scheduler"

# =============================================================================
# EventBridge Scheduler Settings
# =============================================================================

# スケジュール式
# Rate式: "rate(5 minutes)", "rate(1 hour)", "rate(1 day)"
# Cron式: "cron(0 12 * * ? *)" (毎日12:00 UTC)
schedule_expression = "rate(5 minutes)"

# スケジュールを有効にするか
schedule_enabled = true

# タイムゾーン（cron式の場合に適用）
# "UTC", "Asia/Tokyo", "America/New_York", etc.
schedule_timezone = "UTC"

# フレキシブルタイムウィンドウ（分）
# 0 = OFF（指定時刻に正確に実行）
# 1-1440 = その時間内でランダムに実行
flexible_time_window_minutes = 0

# =============================================================================
# Lambda Settings
# =============================================================================

lambda_runtime     = "nodejs18.x"
lambda_timeout     = 60
lambda_memory_size = 256

# カスタムLambdaソースコードのパス（nullの場合はデフォルトのインラインコードを使用）
# lambda_source_path = "./lambda"
lambda_source_path = null

# =============================================================================
# S3 Settings
# =============================================================================

# S3バケット名（nullの場合は自動生成）
# s3_bucket_name = "my-custom-bucket-name"
s3_bucket_name = null

# バージョニングを有効にするか
s3_versioning_enabled = false

# データ保持期間（日）
# 0 = ライフサイクルルールなし（永久保持）
s3_lifecycle_days = 90

# =============================================================================
# Logging Settings
# =============================================================================

log_retention_days = 30

# =============================================================================
# Tags
# =============================================================================

tags = {
  Owner = "your-name"
}
